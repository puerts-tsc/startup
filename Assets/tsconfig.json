{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "strict": false,
        "strictNullChecks": false,
        "strictPropertyInitialization": false,
        "sourceMap": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "csharp": [
                "Gen/Typing/csharp"
            ],
            "puerts": [
                "Plugins/Puerts/Typing/puerts"
            ],
            "*": [
                "Scripts/tsc/src/*",
                "Examples/src/*",
                "Scripts/sandbox/src/*"
            ],
            "tsc/*": [
                "Scripts/tsc/src/*"
            ],
            "examples/*": [
                "Examples/src/*"
            ],
            "sandbox/*": [
                "Scripts/sandbox/src/*"
            ]
        },
        "typeRoots": [
            "Plugins/Puerts/Typing",
            "Examples/Typing",
            "Scripts/tsc/Typing",
            "Scripts/sandbox/Typing",
            "Gen/Typing",
            "../node_modules/@types"
        ],
        "outDir": "Scripts/dist~"
    },
    "include": [
        "Examples/src/**/*",
        "Scripts/sandbox/src/**/*",
        "Scripts/tsc/src/**/*",
        "Scripts/tsc/Typing/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}